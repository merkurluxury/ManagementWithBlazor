<MudDialog>
    <DialogContent>
        <MudText>Bu Kaydı Silmek İstiyor Musunuz? Bu İşlem Geri Alınamaz</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Vazgeç</MudButton>
        <MudButton OnClick="ConfirmDelete" Color="@Color.Error" Variant="Variant.Filled">Sil</MudButton>
    </DialogActions>
</MudDialog>


@code{

    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    private void ConfirmDelete()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
